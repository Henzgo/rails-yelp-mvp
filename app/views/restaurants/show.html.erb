<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <%= link_to 'Back to restaurants', restaurants_path, class: "btn btn-primary" %>
  <%= link_to 'Delete',
    restaurant_path(@restaurant),
    data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'},
    class: "btn btn-secondary" %>
    <%= link_to 'Edit this restaurant', edit_restaurant_path %>
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= review.rating %></li>
    <% end %>
  </ul>
  <br>
</div>
